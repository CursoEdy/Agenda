<%- include('includes/head')%>
    <%- include('includes/nav')%>

        <div class="container">
            <div class="row">
                <div class="col-lg-2"></div>

                <div class="col-lg-8 my-5">
                    <h1 class="text-center">Criar conta ou entrar</h1>
                    <p class="text-center lead">Crie sua conta ou faça seu login abaixo</p>

                    <%- include('includes/messages'); %>

                    <div class="row">
                        <div class="col-lg">
                            <h4>Faça seu cadastro</h4>
                            <p>Preencha o formáliro abaixo para criar a sua conta.</p>
                            <form action="/login/register" method="POST">
                                <div class="mb-3">
                                    <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                                    <label for="exampleInputEmail1" class="form-label">Seu e-mail</label>
                                    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email">
                                </div>
                                <div class="mb-3">
                                    <label for="exampleInputEmail1" class="form-label">Seu senha</label>
                                    <input type="password" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="password">
                                </div>
                                <button type="submit" class="btn btn-primary">Cria minha conta</button>
                            </form>
                        </div>
                        <div class="col-lg">
                            <h4>Entra no sistema</h4>

                            <p>Se você já tem uma conta, faça seu login abaixo:</p>

                            <form action="/login/login" method="POST">
                                <div class="mb-3">
                                    <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                                    <label for="exampleInputEmail1" class="form-label">E-mail</label>
                                    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email">
                                </div>
                                <div class="mb-3">
                                    <label for="exampleInputEmail1" class="form-label">Senha</label>
                                    <input type="password" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="password">
                                </div>
                                <button type="submit" class="btn btn-primary">Entrar</button>
                            </form>
                        </div>
                    </div>

                </div>

                <div class="col-lg-2"></div>
            </div>
        </div>

        <%- include('includes/footer')%>